    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const shareIcons = document.querySelectorAll(
          ".share-icons .twitter, .share-icons .linkedin"
        );

        shareIcons.forEach((icon) => {
          const articleSlug = icon.getAttribute("data-article-slug");
          const link = `https://www.gt.adv.br/articles/${articleSlug}`;
          const title = encodeURIComponent(
            document.querySelector("title").textContent
          );
          const text = "Look what I found";

          if (icon.classList.contains("twitter")) {
            icon.href = `http://twitter.com/share?text=${text}&url=${link}`;
          } else if (icon.classList.contains("linkedin")) {
            icon.href = `https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(
              link
            )}&title=${title}&summary=${text}`;
          }
        });
      });
    </script>
